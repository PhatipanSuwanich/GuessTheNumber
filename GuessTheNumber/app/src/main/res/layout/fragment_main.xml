<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/binary" />

    <TextView
        android:id="@+id/nameGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/level"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:text="Guess \nThe Number?"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_margin="30dp"
        android:checkedButton="@+id/easy"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@id/easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="Easy"
            android:textColor="#ffee00"
            android:textSize="30dp" />

        <RadioButton
            android:id="@+id/hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hard"
            android:textColor="#ff0000"
            android:textSize="30dp" />
    </RadioGroup>

    <Button
        android:id="@+id/play"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/level"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#ffffff"
        android:textColor="#000000"
        android:text="Play"
        android:textSize="20dp" />

    <TextView
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create By Phatipan Suwanich"/>
</RelativeLayout>